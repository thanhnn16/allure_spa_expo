{
  "expo": {
    "name": "Allure Spa",
    "slug": "allurespa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "developmentClient": {
      "silentLaunch": true
    },
    "scheme": "allurespa",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.faith-nippon.allure-spa",
      "googleServicesFile": "./firebase/GoogleService-Info.plist",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location when open.",
        "NSMicrophoneUsageDescription": "This app needs access to the microphone.",
        "NSCameraUsageDescription": "This app needs access to the camera.",
        "LSApplicationQueriesSchemes": [
          "zalo",
          "zaloshareext",
          "zalosdk"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "zalo",
            "CFBundleURLSchemes": [
              "zalo",
              "allurespa",
              "zalo-3131373079387573469"
            ]
          }
        ]
      },
      "entitlements": {
        "aps-environment": "development"
      }
    },
    "android": {
      "package": "com.faithnippon.allurespa",
      "googleServicesFile": "./firebase/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "expo-router",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "CUSTOM: Allow $(PRODUCT_NAME) to access the microphone",
          "speechRecognitionPermission": "CUSTOM: Allow $(PRODUCT_NAME) to securely recognize user speech"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/AlexBrush-Regular.ttf",
            "./assets/fonts/SFProText-Bold.otf",
            "./assets/fonts/SFProText-Semibold.otf",
            "./assets/fonts/SFProText-Medium.otf",
            "./assets/fonts/SFProText-Regular.otf",
            "./assets/fonts/KaiseiTokumin-Regular.ttf"
          ]
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "isAccessMediaLocationEnabled": false
        }
      ],
      "expo-localization",
      "expo-location",
      "expo-av",
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "65d3bae8-1d7b-45c0-a9bb-84fa6ff8897d"
      }
    },
    "owner": "datn-allurespa"
  }
}
