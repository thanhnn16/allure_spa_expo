{
  "expo": {
    "name": "Allure Spa",
    "slug": "allure_spa_expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "allurespa",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.faithnippon.allurespa",
      "supportsTablet": true,
      "icon": "./assets/images/icon.png",
      "infoPlist": {
      "NSAppTransportSecurity": { 
        "NSAllowsArbitraryLoads": true 
      }
    }
    },
    "android": {
      "package": "com.faithnippon.allurespa",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/AlexBrush-Regular.ttf",
            "./assets/fonts/SFProText-Bold.otf",
            "./assets/fonts/SFProText-Semibold.otf",
            "./assets/fonts/SFProText-Medium.otf",
            "./assets/fonts/SFProText-Regular.otf"
          ]
        }
      ],
      "expo-localization",
      "expo-location",
      "expo-av"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
